{
  "name": "@blaze-cardano/core",
  "version": "0.7.0",
  "description": "Blaze cardano core library",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts --format esm,cjs --dts",
    "dev": "tsdown src/index.ts --format esm,cjs --watch --dts",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "build:types": "tsc -p tsconfig.docs.json",
    "api:extract": "api-extractor run --local --verbose",
    "api:md": "rimraf docs/api && api-documenter markdown -i etc -o docs/api",
    "api:prepare": "pnpm build:types && pnpm api:extract && pnpm api:md"
  },
  "devDependencies": {
    "@blaze-cardano/eslint-config": "workspace:*",
    "@blaze-cardano/tsconfig": "workspace:*",
    "eslint": "^8.57.1",
    "terser": "^5.37.0",
    "tsdown": "^0.15.7",
    "typescript": "^5.7.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@cardano-sdk/core": "0.45.0",
    "@cardano-sdk/crypto": "^0.1.32",
    "@cardano-sdk/util": "^0.15.5",
    "@noble/curves": "^1.8.1",
    "@noble/ed25519": "^2.2.3",
    "@noble/hashes": "^1.7.1",
    "@scure/bip39": "^1.5.4",
    "blakejs": "^1.2.1"
  }
}

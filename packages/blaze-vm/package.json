{
  "name": "@blaze-cardano/vm",
  "version": "0.1.12",
  "description": "Blaze cardano plutus virtual machine",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts src/value.ts --format esm,cjs --dts --external rxjs",
    "dev": "tsdown src/index.ts --format esm,cjs --watch --dts --external rxjs",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "build:types": "tsc -p tsconfig.docs.json",
    "api:extract": "api-extractor run --local --verbose",
    "api:md": "rimraf docs/api && api-documenter markdown -i etc -o docs/api",
    "api:prepare": "pnpm build:types && pnpm api:extract && pnpm api:md"
  },
  "devDependencies": {
    "@blaze-cardano/eslint-config": "workspace:*",
    "@blaze-cardano/jest-config": "workspace:*",
    "@blaze-cardano/tsconfig": "workspace:*",
    "eslint": "^8.57.0",
    "tsdown": "^0.14.1",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@blaze-cardano/core": "workspace:*",
    "uplc-node": "github:SundaeSwap-finance/uplc-node#2d99037a215950b46a47a13eb69a12190cb25836"
  }
}

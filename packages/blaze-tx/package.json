{
  "name": "@blaze-cardano/tx",
  "version": "0.14.0",
  "description": "Blaze cardano transaction building library",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./value": {
      "import": "./dist/value.mjs",
      "require": "./dist/value.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts src/value.ts --format esm,cjs --dts --external rxjs",
    "watch": "tsdown src/index.ts src/value.ts --format esm,cjs --dts --external rxjs --watch",
    "dev": "tsdown src/index.ts --format esm,cjs --watch --dts --external rxjs",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:types": "tsc -p tsconfig.docs.json",
    "api:extract": "api-extractor run --local --verbose",
    "api:md": "rimraf docs/api && api-documenter markdown -i etc -o docs/api",
    "api:prepare": "pnpm build:types && pnpm api:extract && pnpm api:md"
  },
  "devDependencies": {
    "@blaze-cardano/data": "workspace:*",
    "@blaze-cardano/eslint-config": "workspace:*",
    "@blaze-cardano/jest-config": "workspace:*",
    "@blaze-cardano/tsconfig": "workspace:*",
    "@sinclair/typebox": "^0.32.32",
    "@types/jest": "^29.5.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsdown": "^0.15.9",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@blaze-cardano/core": "workspace:*",
    "@blaze-cardano/vm": "workspace:*"
  }
}

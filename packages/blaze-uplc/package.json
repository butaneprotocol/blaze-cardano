{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@blaze-cardano/uplc",
  "version": "0.0.1",
  "description": "Blaze untyped plutus core library",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/value.ts --format esm,cjs --dts --external rxjs",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external rxjs",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest"
  },
  "devDependencies": {
    "@blaze-cardano/eslint-config": "workspace:*",
    "@blaze-cardano/jest-config": "workspace:*",
    "@blaze-cardano/tsconfig": "workspace:*",
    "@types/jest": "^29.5.5",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "uplc-node": "^0.0.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@blaze-cardano/core": "workspace:*",
    "@cardano-sdk/core": "^0.30.2",
    "hex-encoding": "^2.0.2"
  }
}
